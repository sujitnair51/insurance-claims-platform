generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Claim {
  id              String    @id @default(uuid())
  policyNumber    String
  claimType       String
  amount          Float
  customerId      String
  status          String    @default("PENDING")
  incidentDate    DateTime
  description     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
